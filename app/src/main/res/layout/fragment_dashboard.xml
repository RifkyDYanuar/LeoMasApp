<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dasboard_bg"
    tools:context=".DashboardFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginVertical="40dp"
                android:layout_marginHorizontal="22dp"
                android:id="@+id/logged"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/profile_up" />
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/full_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semibold"
                        android:textSize="16sp"
                        android:text="Rifky dewani Yanur"
                        android:textColor="@color/dark_blue"/>
                    <TextView
                        android:textColor="@color/dark_blue"
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:text="rifkydewani"/>

                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_below="@id/logged"
                android:layout_marginHorizontal="38dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/content"
                android:textSize="20sp"
                android:textColor="@color/dark_blue"
                android:fontFamily="@font/inter_bold"
                android:text="@string/title"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_below="@id/content"
                android:layout_marginVertical="16dp"
                android:layout_marginHorizontal="38dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_weight="1"
                        android:id="@+id/show_history"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_receipt_32"/>
                        <TextView
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/history"
                            android:fontFamily="@font/inter_medium"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:id="@+id/show_product"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/jewellery"/>
                        <TextView
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/jewelry"
                            android:fontFamily="@font/inter_medium"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:id="@+id/show_favorite"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/outline_favorite_border_24"/>
                        <TextView
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/fav"
                            android:fontFamily="@font/inter_medium"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_below="@id/card"
                android:layout_marginHorizontal="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/popular"
                android:textSize="16sp"
                android:fontFamily="@font/inter_bold"
                android:text="@string/new_years"/>
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/model_women1"
                android:layout_centerVertical="true"
                android:elevation="10dp"
                android:layout_marginStart="30dp"
                android:layout_below="@id/popular" />
            <androidx.cardview.widget.CardView
                android:layout_marginTop="60dp"
                android:id="@+id/card_populer"
                android:layout_below="@id/popular"
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:layout_marginHorizontal="38dp"
                app:cardCornerRadius="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <View
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/cloud"/>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/diamond_solitarie_maya_1"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/diamond_solitarie_maya_2"/>
                            <ImageView
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/diamond_solitarie_maya_3"/>
                        </LinearLayout>
                        <TextView
                            android:layout_marginStart="28dp"
                            android:id="@+id/name_product"
                            android:fontFamily="@font/inter_semibold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:textAlignment="textEnd"
                            android:layout_marginHorizontal="28dp"
                            android:id="@+id/view_detail"
                            android:textSize="11sp"
                            android:fontFamily="@font/inter_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dark_blue"
                            android:text="@string/text_view_detail"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <ImageView
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="38dp"
                android:layout_below="@id/card_populer"
                android:elevation="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/model_women2"/>
            <androidx.cardview.widget.CardView
                android:layout_marginVertical="70dp"
                android:id="@+id/card_populer_2"
                android:layout_below="@id/card_populer"
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:layout_marginHorizontal="38dp"
                app:cardCornerRadius="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/diamond_necklace_ashoka_lwf01005_1"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/diamond_necklace_ashoka_lwf01005_2"/>
                            <ImageView
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/diamond_necklace_ashoka_lwf01005_3"/>
                        </LinearLayout>
                        <TextView
                            android:textAlignment="textEnd"
                            android:layout_marginEnd="60dp"
                            android:id="@+id/name_product_2"
                            android:fontFamily="@font/inter_semibold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""/>
                        <TextView
                            android:textAlignment="textStart"
                            android:layout_marginHorizontal="28dp"
                            android:id="@+id/view_detail2"
                            android:textSize="11sp"
                            android:fontFamily="@font/inter_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dark_blue"
                            android:text="@string/text_view_detail"/>
                    </LinearLayout>
                    <View
                        android:layout_weight="3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/blue"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/content_populer"
                android:layout_below="@id/card_populer_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="38dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_populer"
                    android:fontFamily="@font/inter_bold"/>
                <TextView
                    android:textAlignment="textEnd"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/view_all"
                    android:text="@string/text_view_all"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="@color/dark_blue"/>

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:paddingVertical="16dp"
                android:layout_marginVertical="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="38dp"
                android:layout_below="@id/content_populer"
                android:id="@+id/rings_recyle"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/rings_layout">
            </androidx.recyclerview.widget.RecyclerView>
            <androidx.recyclerview.widget.RecyclerView
                android:paddingVertical="16dp"
                android:paddingStart="20dp"
                android:paddingEnd="38dp"
                android:layout_below="@id/rings_recyle"
                android:id="@+id/nekclace_recyle"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>