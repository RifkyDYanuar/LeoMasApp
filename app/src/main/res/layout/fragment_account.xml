<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dasboard_bg"
    tools:context=".AccountFragment">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/user_profil_baseline"
        android:layout_marginTop="90dp"
        android:elevation="10dp"/>
    <LinearLayout
        android:elevation="10dp"
        android:layout_marginTop="180dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textAlignment="center"
            android:id="@+id/full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_blue"
            android:fontFamily="@font/inter_bold"
            android:textSize="16sp"/>
        <TextView
            android:textAlignment="center"
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_blue"
            android:fontFamily="@font/inter_medium"
            android:textSize="16sp"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:background="@drawable/profile_bg"
            android:orientation="vertical">
            <LinearLayout
                android:padding="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="120dp"
                android:id="@+id/my_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/user_profil"/>
                <TextView
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/myprofil"
                    android:fontFamily="@font/inter_medium"/>

                <ImageView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_keyboard_arrow_right_24"/>
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                android:id="@+id/my_favorite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/outline_favorite_border_24"/>
                <TextView
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/myfavorite"
                    android:fontFamily="@font/inter_medium"/>

                <ImageView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_keyboard_arrow_right_24"/>
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                android:id="@+id/my_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_receipt_32"/>
                <TextView
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/myhistory"
                    android:fontFamily="@font/inter_medium"/>

                <ImageView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_keyboard_arrow_right_24"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="56dp"
                android:background="@color/grey"/>
            <LinearLayout
                android:padding="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="26dp"
                android:id="@+id/about_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_info_outline_24"/>
                <TextView
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/aboutus"
                    android:fontFamily="@font/inter_medium"/>

                <ImageView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_keyboard_arrow_right_24"/>
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                android:id="@+id/contact_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/outline_phone_24"/>
                <TextView
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/contact"
                    android:fontFamily="@font/inter_medium"/>

                <ImageView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_keyboard_arrow_right_24"/>
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                android:id="@+id/policies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/outline_privacy_tip_24"/>
                <TextView
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/term"
                    android:fontFamily="@font/inter_medium"/>

                <ImageView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_keyboard_arrow_right_24"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="56dp"
                android:background="@color/grey"/>
            <LinearLayout
                android:padding="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="26dp"
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_logout_24"/>
                <TextView
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/logout"
                    android:textColor="@color/error"
                    android:fontFamily="@font/inter_medium"/>

                <ImageView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_keyboard_arrow_right_24"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</FrameLayout>