<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <LinearLayout
        android:padding="6dp"
        android:layout_marginTop="60dp"
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginEnd="220dp"
                android:layout_weight="2"
                android:id="@+id/back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_arrow_back_24"/>
            <ImageView
                android:layout_weight="5"
                android:id="@+id/favorite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_favorite_border_2"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/first_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_weight="1"
                android:id="@+id/second_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:layout_weight="1"
                android:id="@+id/last_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               />
        </LinearLayout>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        app:cardElevation="8dp"
        android:layout_below="@id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name_product"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:textSize="16sp"
                android:text="Diamond Ring Solitaire Maya CWS0423"/>
            <TextView
                android:id="@+id/harga_product"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:textSize="16sp"
                android:text="RP 6.000.000"/>

            <TextView
                android:layout_marginTop="60dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:textSize="16sp"
                android:text="Type :"/>
            <TextView
                android:id="@+id/jenis_product"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:textSize="16sp"
                android:text="Rings"/>
            <TextView
                android:layout_marginTop="60dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:textSize="16sp"
                android:text="Information :"/>
            <TextView
                android:id="@+id/detail_product"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:textSize="16sp"
                android:text="Rings"/>

        </LinearLayout>
        <Button
            android:layout_gravity="bottom"
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_buy_now"
            android:text="@string/buy_now"
            android:background="@drawable/button_custom"
            android:fontFamily="@font/inter_bold"/>
    </androidx.cardview.widget.CardView>

</RelativeLayout>